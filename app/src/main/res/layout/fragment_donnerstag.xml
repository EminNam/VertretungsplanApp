<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Donnerstag">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datumDonnerstag"
        android:layout_below="@+id/pager"
        android:text="Loading..."
        android:textSize="30sp"
        android:textColor="#000000"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:background="@android:color/darker_gray"
        android:id="@+id/trennlinie"
        android:layout_below="@+id/datumDonnerstag"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vertretungenDonnerstag"
        android:layout_below="@+id/datumDonnerstag"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/leerDo"
        android:layout_below="@+id/trennlinie"
        />

</RelativeLayout>